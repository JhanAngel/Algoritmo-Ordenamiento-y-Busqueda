
package Packet;
import java.util.Scanner;

public class Algoritmos{

    public static void main(String[] args){
      Scanner entrada = new Scanner(System.in);
        
        int Elementos=7;  //defino el tama√±o del arreglo
        int arreglo[]=new int[Elementos];  
        int intercambio;
        
        
        for (int i= 0;i<Elementos;i++){  
            System.out.println("Numero valorico del arreglo " + (i + 1) + ": ");
            arreglo[i]= entrada.nextInt();
        }
        
        //Metodo burbuja
        for (int i=0; i<(Elementos-1); i++){ 
        	for(int j=0;j<(Elementos -1); j++ ){
        		if(arreglo[j] > arreglo[j+1]){ 
        		intercambio = arreglo[j];
        		
        		arreglo[j] = arreglo [j+1]; 
        		arreglo [j+1]= intercambio; 
        		      		
        		}      		
        	}         
        }
               
        System.out.println("Arreglo de forma creciente: ");
        for(int i =0;i<Elementos;i++) {
        	System.out.println(arreglo[i] + " - ");
}
    }
}

